<script>
    const days = Array.from({ length: 31 }, (_, i) => i + 1);
    const months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
    const years = Array.from({ length: 125 }, (_, i) => i + 1900); // Adjusted to start from 1900

    function populateSelect(element, options) {
        element.innerHTML = "";
        options.forEach(option => {
            const opt = document.createElement('option');
            opt.value = option.value;
            opt.textContent = option.label;
            element.appendChild(opt);
        });
    }

    function updateDays() {
        const month = parseInt(document.getElementById('month').value);
        const year = parseInt(document.getElementById('year').value);
        const daySelect = document.getElementById('day');
        const selectedMonth = new Date(year, month + 1, 0).getDate();
        const selectedDay = daySelect.value;
        let updatedDays = days.slice(0, selectedMonth);

        // For February, check if it's a leap year and update days accordingly
        if (month === 1) {
            const isLeapYear = (year % 4 === 0 && year % 100 !== 0) || (year % 400 === 0);
            if (!isLeapYear) {
                updatedDays = days.slice(0, 28);
            }
        }

        populateSelect(daySelect, updatedDays.map(day => ({ value: day, label: day })));

        // Check if the selected day is valid for the updated month
        if (selectedDay <= selectedMonth) {
            daySelect.value = selectedDay;
        } else {
            // If the selected day is not valid, set it to the last day of the month
            daySelect.value = selectedMonth;
        }
    }

    document.addEventListener('DOMContentLoaded', () => {
        const daySelect = document.getElementById('day');
        const monthSelect = document.getElementById('month');
        const yearSelect = document.getElementById('year');

        const selectedDay = 1; // Default to January 1
        const selectedMonth = 0; // Default to January
        const selectedYear = 1900; // Default to 1900

        populateSelect(daySelect, days.map(day => ({ value: day, label: day })));
        populateSelect(monthSelect, months.map((month, index) => ({ value: index, label: month })));
        populateSelect(yearSelect, years.map(year => ({ value: year, label: year })));

        daySelect.value = selectedDay;
        monthSelect.value = selectedMonth;
        yearSelect.value = selectedYear;

        updateDays();

        monthSelect.addEventListener('change', updateDays);
        yearSelect.addEventListener('change', updateDays);
    });
</script>

